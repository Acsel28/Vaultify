{
  "manifest_version": 3,
  "name": "Student Password Manager",
  "version": "1.0",
  "description": "Helps students create strong passwords and learn good security habits.",
  "permissions": ["storage", "activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
